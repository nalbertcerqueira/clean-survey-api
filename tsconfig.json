{
    "compilerOptions": {
        "lib": ["ES6"],
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "@main/*": ["main/*"],
            "@infra/*": ["infra/*"],
            "@presentation/*": ["presentation/*"],
            "@domain/*": ["domain/*"]
        }
    },
    "include": ["src"]
}
